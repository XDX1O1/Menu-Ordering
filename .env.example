# Database Configuration
DB_URL=jdbc:mysql://localhost:3306/restaurant_db
DB_USERNAME=root
DB_PASSWORD=your_database_password_here

# Hibernate Configuration
# Use 'validate' in production, 'update' for development
HIBERNATE_DDL_AUTO=validate
HIBERNATE_SHOW_SQL=false

# Logging Configuration
# Use INFO in production, DEBUG for development
LOG_LEVEL_SECURITY=INFO
LOG_LEVEL_APP=INFO

# Thymeleaf Cache
# Set to true in production for better performance
THYMELEAF_CACHE=true

# WebSocket CORS
# Set to your domain in production (e.g., https://yourdomain.com)
# Multiple origins can be separated by comma
ALLOWED_ORIGINS=https://yourdomain.com

# Server Configuration
SERVER_PORT=8080

# Session Timeout (in seconds)
# 8h = 28800 seconds
SESSION_TIMEOUT=28800
